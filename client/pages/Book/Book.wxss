page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 直接设置swiper属性 */
swiper {
  height: 500rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}

.temp{
  
}

.muticolumn{
  height: 100rpx;
  border-bottom: 1px solid #d5d5d5;
  display: flex;
  flex-direction: row;
}

.liststatus{
  width:180rpx;
  text-align: center;
  border-radius: 5px;
  color:gray;
  background-color: rgba(0,0,0,0.1);
}

.muticolumn_unit{
  padding:20rpx; 
  width: 375rpx;
  text-align: center;
  font-size:35rpx;
}

button::after{
border: none;
}

.addcoll{
  width: 90rpx;
  display:flex;
  flex-direction:column;
  align-items: center;
  opacity: 0.5;
}

.comment_list{
  margin: 0 20rpx;
  font-size: 30rpx;
  color: black;
  text-align: justify;
}

.addzan{
  text-align:right;
  display:flex;
  margin: 0 30rpx;
  font-size: 30rpx;
  color: black;
  float: right;
}

.link{
  width: 230rpx;
  display:flex;
  flex-direction:column;
  align-items: center;
  opacity: 0.5;
}


.newtitle {
  margin: 0 20rpx;
  font-size: 40rpx;
  color: black;
  text-align: justify;
}

.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .title {
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  text-align: justify;
}
.detail .price {
  color: red;
  margin: 0 20rpx;
  display: flex;
}

.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.button-green {
  background-color: #4caf50; /* Green */
}
.button-buy {
  background-color: #f44336; /* 红色 */
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
/* 占位 */

text {
  
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}

.separate{
  margin: 0 20rpx ;
  height: 1px;
  background: #888;
  opacity: 0.3;
}
/* pages/Lottery/Lottery.wxss */
page{
  background-color: rgba(255,201,14,0.8);
}

.lottery{
  width:750rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.lobutton{
  margin: 50rpx;
  color:white;
  font-size:40rpx;
  border-radius: 15rpx;
}

.lounit{
  width:180rpx;
  height: 180rpx;
  margin: 0 10rpx;
  background-color :white;
  border-bottom:1px solid rgba(136,136,136,0.2);
  align-items: center;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size:30rpx;
}

.longlinetext{
  width: 450rpx;
  color: #999;
  font-size: 30rpx;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.collbookunit{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  height:200rpx;
}

.collbooktitle{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: left;
  width:450rpx;
}

.graytext{
   padding:10rpx 20rpx;
   margin: 0 25rpx;
   font-size:30rpx;
   color:gray;
   
}

button::after{
border: none;
}

.separate{
  height: 1px;
  background: #888;
}